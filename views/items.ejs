<!DOCTYPE html>
<html>
<head>
  <title>DataItem</title>
</head>
  <body>
    <h1>List Items</h1>
    <a href="/items/add"><button>Add</button></a>
    <table border='2px'>
      <thead>
        <tr>
          <th class="text-center">ID</th>
          <th class="text-center">Name </th>
          <th class="text-center">Brand </th>
          <th class="text-center">Codeitem</th>
          <th class="text-center">Action</th>
        </tr>
      </thead>
      <tbody>
        <%dataItems.forEach( rows => { %>
          <tr>
            <td class="text-center"><%=rows.id%></td>
            <td class="text-center"><%=rows.name%></td>
            <td class="text-center"><%=rows.brand%></td>
            <td class="text-center"><%=rows.codeitem%></td>
            <td class="text-center">
              <a href="/items/edit/<%=rows.id%>"><button class="text-center">Edit</button></a>
              <a href="/items/delete/<%=rows.id%>"><button class="text-center">Delete</button></a>
            </td>
          </tr>
        <% })%>
      </tbody>
    </table>
  </body>
</html>
